<div class="container">
<h1>New Order for <%= @food.name %></h1>
  <div class="row">
    <div class="col-sm-4">
<%= form_for [@food,Order.new] do |f| %>
  <div class="form-group">
    <%= f.label :name %><br>
    <%= f.text_field :name ,class: "form-control"%>
  </div>
  <div class="form-group">
    <%= f.label :phone %><br>
    <%= f.text_field :phone ,class: "form-control"%>
  </div>
  <div class="form-group">
    <%= f.label :address %><br>
    <%= f.text_field :address ,class: "form-control"%>
  </div>
  <div class="actions">
    <%= f.submit "Create Order", class: "btn btn-primary"%>
  </div>
<% end %>
    </div>
  </div>
</div>